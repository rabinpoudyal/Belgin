<!-- Start of the heading Overlay Image On top -->

<div class="profile-img img-responsive" style="background-image: linear-gradient(rgba(20,20,20, .5), rgba(20,20,20, .5)), url(<%= @shop.cover_img_url %>)">
	<h1 class="h1 text-center" id="shop-motto">Write theme of your business</h1>
	<h1 class="h4 text-center">This is the subsidary shop theme the owner want to put here. Thanks</h1>
	<center>
      <button class="btn btn-primary">Visit Shop</button>
      <button class="btn btn-primary">About Us</button>
  </center>
	<div class="" id="subs-motto"></div>
</div>

<!-- end of overlay heading image -->

<!-- Start of shop theme ideas -->
<div class="container-fluid" style="background-color: #F66249; width: 100%;">
	<div class="row" style="padding: 20px 0px;">
		<div class="col-md-4" style="border-right: 3px solid white;">
			<h1 class="h2 text-center" style="color: white;">FREE SHIPPING</h1>
			<h1 class="h4 text-center" style="color: white;">On all orders over $90</h1>
		</div>
		<div class="col-md-4" style="border-right: 3px solid white;">
			<h1 class="h2 text-center" style="color: white;">CALL US ANYTIME</h1>
			<h1 class="h4 text-center" style="color: white;"><%= @shop.phone %></h1>
		</div>
		<div class="col-md-4">
			<h1 class="h2 text-center" style="color: white;">OUR LOCATION</h1>
			<h1 class="h4 text-center" style="color: white;"><%= @shop.location %></h1>
		</div>
	</div>
</div>

<!-- End of shop theme ideas -->


<!-- Start of customization modal -->

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header" style="background-color: #22A7F0;color: white;">
        <button type="button" class="close" data-dismiss="modal"><span class="fa fa-times" style="color: white"></span></button>
        <h4 class="modal-title">Customize Your Shop</h4>
      </div>
      <div class="modal-body">
        <%= form_for(@shop) do |f| %>

        <div class="field form-group">
        	<%= f.label :name %>
        	<%= f.text_field :name, :class => "form-control" %>
        </div>

        <div class="form-group">
        	<%= f.label :description %>
        	<%= f.text_area :description, :class => "form-control", :rows => "4" %>
        </div>

        <div class="form-group">
        	<%= f.label :"Owner Image Url" %>
        	<%= f.text_field :img_url, :class => "form-control" %>
        </div>

         <div class="form-group">
        	<%= f.label :"Cover Image Url" %>
        	<%= f.text_field :cover_img_url, :class => "form-control" %>
        </div>

        <div class="field form-group">
        	<%= f.label :location %>
        	<%= f.text_field :location, :class => "form-control" %>
        </div>

        <div class="field form-group">
        	<%= f.label :phone %>
        	<%= f.number_field :phone, :class => "form-control" %>
        </div>

        </div>
      <div class="modal-footer" style="background-color: #22A7F0;color: white;">
        <%= f.submit "Save Changes", :class => "btn btn-default" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- End of customization modal -->


<!-- Start of featured products section -->

<div class="container">
	<div class="row">
		  <h1 class="h3 text-center" style="padding: 30px 0px;">FEATURED</h1>
		  <div class="featured-product-slider col-md-12">
  			<% @featured_products.each do |f| %>
  				<div class="">
  				  <img src = <%= f.img_url %> class="img-responsive" />
  				</div>
  			<% end %>
		  </div>
	</div>
</div>

<!-- End of featured products section -->


<!-- Start of top deals products -->

<div class="container">
	<h1 class="h3 text-center" style="padding: 30px 0px;">TOP DEALS THIS WEEK</h1>
	<div class="row">
    <% @products.each do |p| %>
    	<div class="col-md-4">
    		<div class="figure" style="margin-bottom: 30px;">
    			<img src=<%= p.img_url %> class="img-responsive">
          <p class="text-center"><%= p.name %></p>
          <p class="text-center"><%= p.price %></p>
    		</div>
  	  </div>
    <% end %>
	</div>

  <!-- End of top deals section -->



  <div class="row">
      <h1 class="h3 text-center" style="padding: 30px 0px;">OUR BEST SELLERS</h1>
      <% @products.each do |p| %>
        <div class="col-md-4">
          <div class="figure" style="margin-bottom: 30px;">
            <img src=<%= p.img_url %> class="img-responsive">
            <p class="text-center"><%= p.name %></p>
            <p class="text-center"><%= p.price %></p>
          </div>
        </div>
      <% end %>
  </div>
</div>

<!-- End of container -->


<section class="home-newsletter">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="single">
          <h2>Subscribe to our Newsletter</h2>
        <div class="input-group">
               <input type="email" class="form-control" placeholder="Enter your email">
               <span class="input-group-btn">
               <button class="btn btn-theme" type="submit">Subscribe</button>
               </span>
                </div>
        </div>
      </div>
    </div>
  </div>
</section>







