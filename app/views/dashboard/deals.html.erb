
<div class="wrapper">
    
    <%= render 'dashboard_shared/sidenavigation' %>

    <div class="main-panel">
        <%= render 'dashboard_shared/navigation_bar' %>

        <div class="content">
        	<div class="container-fluid">
        		<h1 class="h2">Deals</h1>
        		<div class="row">
        			<div class="col-md-12">
        				<div class="content table-responsive table-full-width">
        					<table class="table table-hover table-striped">
        						<thead>
        							<th>Product</th>
        							<th>Starts At</th>
        							<th>Ends At</th>
        							<th>Percentage(%)</th>
        							<th>Condition</th>
        						</thead>
        						<tbody>
        							<% @deals.each do |d| %>
        								<tr>
        									<td data-turbolinks="false"><%= link_to d.product.name, shop_product_path(current_user.shop, d) %></td>
        									<td><%= d.start.to_s %></td>
        									<td><%= d.end.to_s %></td>
        									<td><%= d.percentage %></td>
        									<td><%= d.condition %></td>
        								</tr>
        							<% end %>
        						</tbody>
        					</table>
        				</div>
        			</div>
        		</div>
        	</div>
        </div>

    </div>
</div>